<launch>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find racecar)/config/racecar-v2/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find racecar)/config/racecar-v2/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find racecar)/config/racecar-v2/move_base/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find racecar)/config/racecar-v2/move_base/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find racecar)/config/racecar-v2/move_base/base_local_planner_holonomic_params.yaml" command="load" />
        <rosparam file="$(find racecar)/config/racecar-v2/move_base/move_base_params.yaml" command="load" />

        <!-- explicitly define frame ids for movebase -->
        <param name="global_costmap/global_frame"                   value="map"/>
        <param name="global_costmap/robot_base_frame"               value="base_footprint"/>
        <param name="global_costmap/2d_obstacles_layer/scan/topic"  value="scan"/>
        <!-- <param name="global_costmap/3d_obstacles_layer/depth/topic" value="camera/depth/points"/> -->
        <param name="local_costmap/global_frame"                    value="odom"/>
        <param name="local_costmap/robot_base_frame"                value="base_footprint"/>
        <param name="local_costmap/2d_obstacles_layer/scan/topic"   value="scan"/>
        <!-- <param name="local_costmap/3d_obstacles_layer/depth/topic"  value="camera/depth/points"/> -->
    </node>
</launch>